{
  "name": "@repo/auth",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.cjs",
    "docker:build": "docker build -t registry.127.0.0.1.nip.io/repo-auth-service:latest -f Dockerfile ../../../",
    "docker:push": "docker image push registry.127.0.0.1.nip.io/repo-auth-service:latest",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "pnpm with-env tsx watch src/index.ts",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../../.env"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/nodemailer": "^6.4.17",
    "dotenv-cli": "^7.4.2",
    "esbuild": "^0.24.2",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config",
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@repo/auth-common": "workspace:^",
    "@repo/db-auth": "workspace:^",
    "@repo/service-discovery": "workspace:^",
    "@t3-oss/env-core": "catalog:",
    "better-auth": "1.2.9",
    "hono": "^4.8.2",
    "nodemailer": "^7.0.5",
    "zod": "catalog:"
  }
}

{
  "name": "repo",
  "private": true,
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.11.0"
  },
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "build": "turbo run build",
    "build:docker": "turbo run build:docker",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "tofu:init": "cd terraform/kind-local && tofu init -upgrade",
    "tofu:apply": "cd terraform/kind-local && tofu apply && ./post-apply.sh",
    "tofu:nuke": "cd terraform/kind-local && docker rm --force --volumes registry monorepo-template-local-control-plane && rm -r certs/* terraform.tfstate* kubeconfig",
    "auth:generate": "turbo -F @repo/auth-common generate",
    "db:push": "turbo db:push",
    "db:studio": "turbo db:studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @repo/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "test": "turbo run test",
    "test:projects": "vitest run",
    "test:projects:watch": "vitest --watch",
    "test:view": "turbo run view-report"
  },
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "@repo/vitest": "workspace:*",
    "@turbo/gen": "^2.5.4",
    "prettier": "catalog:",
    "turbo": "^2.5.4",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}

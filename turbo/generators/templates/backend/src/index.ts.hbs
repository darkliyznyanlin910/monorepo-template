import { serve } from "@hono/node-server";
import { Hono } from "hono";

const app = new Hono()
  .get("/health", (c) =>
    c.json({
      ok: true,
      service: "{{name}}",
      timestamp: new Date().toISOString(),
    }),
  )
  .get("/", (c) => c.json({ message: "Hello, world!" }));
export type AppType = typeof app;
serve({ port: {{ port }}, fetch: app.fetch });

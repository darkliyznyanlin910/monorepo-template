{
  "name": "@repo/{{ name }}",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "start": "NODE_ENV=production pnpm with-env node dist/index.cjs",
    "build": "pnpm with-env tsc -b && pnpm with-env vite build && esbuild server/index.ts --bundle --platform=node --outfile=dist/index.cjs",
    "build:docker": "docker build -t repo-{{ name }}:latest -f Dockerfile ../../../",
    "preview": "pnpm with-env vite preview",
    "clean": "git clean -xdf .cache .turbo dist node_modules .tanstack",
    "dev:server": "pnpm with-env tsx watch server/index.ts",
    "dev:vite": "wait-on http://localhost:{{ backendPort }}/health && pnpm with-env vite",
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:vite\"",
    "format": "prettier --check . --ignore-path ../../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../../env/.env --",
    "test": "vitest run"
  },
  "dependencies": {
    "@repo/service-discovery": "workspace:*",
    "@tanstack/react-router": "^1.121.34",
    "@tanstack/react-table": "^8.21.2",
    "hono": "^4.8.2",
    "next-themes": "^0.4.6",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "vitest": "catalog:vitest",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@repo/ui": "workspace:*",
    "@repo/vitest": "workspace:*",
    "@tanstack/react-query": "catalog:",
    "@tanstack/router-devtools": "^1.99.9",
    "@tanstack/router-plugin": "^1.99.12",
    "@types/node": "^22.15.29",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.14.0",
    "postcss": "^8.5.4",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "6.1.0",
    "wait-on": "^8.0.4"
  },
  "prettier": "@repo/prettier-config"
}
